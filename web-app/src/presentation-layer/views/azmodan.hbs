<div class="main-layout">
    <h1> Reviews </h1>
    {{#if session.isLoggedIn}}
    <a href="/reviews">Add new Review</a>
    {{else}}
    <a href="/accounts/sign-in"> Log in to write a Review</a>
    {{/if}}

    {{#if hasDatabaseError}}
    <p>Couldn't fetch the reviews at the moment, try again later.</p>
    {{else}}

    {{#if reviews.length}}

    {{#each reviews}}
    <article>
        <h2>{{heroesName}}</h2>
        <h3>{{name}}</h3>
        <p>Rating: {{rating}} out of 5</p>
        <p>Description: {{description}}</p>
        <a href="/reviews/{{id}}">Read more</a>
    </article>
    {{/each}}

    {{else}}
    <p>There are no Reviews yet, please write one.</p>
    {{/if}}

    {{/if}}

</div>